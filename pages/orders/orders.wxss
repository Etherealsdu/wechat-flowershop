/* pages/orders/orders.wxss */
.tabs {
  background: white;
  border-bottom: 1px solid #eee;
}

.tab-item {
  flex: 1;
  padding: 15px 0;
  font-size: 16px;
  color: #999;
  border-bottom: 2px solid transparent;
}

.tab-item.active {
  color: #ff6b6b;
  border-bottom: 2px solid #ff6b6b;
}

.order-card {
  margin: 15px;
}

.order-header {
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
}

.order-id {
  font-weight: bold;
}

.pending-status, .processing-status {
  background: #fffac8;
  color: #e6b400;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.completed-status, .delivered-status {
  background: #e8f5e9;
  color: #2e7d32;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.cancelled-status {
  background: #ffebee;
  color: #c62828;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.order-item-image {
  width: 50px;
  height: 50px;
  border-radius: 8px;
  object-fit: cover;
}

.order-item-name {
  font-size: 14px;
  display: block;
}

.order-item-quantity {
  font-size: 12px;
  color: #999;
}

.order-total {
  font-weight: bold;
  color: #333;
}

.empty-orders {
  margin-top: 100px;
}

.empty-orders-icon {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
}

.empty-orders-text {
  display: block;
  font-size: 18px;
  color: #666;
  margin-bottom: 20px;
}

.btn-small {
  padding: 5px 15px;
  font-size: 14px;
}