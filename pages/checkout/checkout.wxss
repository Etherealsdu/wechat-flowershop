/* pages/checkout/checkout.wxss */
.instructions-input {
  width: 100%;
  height: 100px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  font-size: 14px;
}

.delivery-option {
  margin-bottom: 15px;
}

.delivery-label {
  display: block;
  font-weight: 500;
}

.delivery-time {
  font-size: 12px;
}

.summary-item {
  font-size: 14px;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.summary-row.bold {
  font-weight: bold;
  font-size: 16px;
  margin-top: 8px;
}

.total-amount {
  color: #ff6b6b;
  font-size: 18px;
}

.address-line {
  display: block;
  margin-bottom: 3px;
  font-size: 14px;
}