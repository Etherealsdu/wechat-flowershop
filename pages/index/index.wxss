/* pages/index/index.wxss */
.banner-swiper {
  height: 200px;
}

.banner-image {
  width: 100%;
  height: 200px;
}

.quick-actions {
  background: white;
}

.action-btn {
  flex: 1;
  padding: 15px 10px;
}

.action-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 5px;
}

.action-text {
  font-size: 12px;
  color: #333;
}

.section {
  background: white;
  margin-bottom: 10px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.section-more {
  color: #ff6b6b;
  font-size: 14px;
}

.horizontal-scroll {
  white-space: nowrap;
}

.product-card {
  width: 160px;
  display: inline-block;
  margin-right: 10px;
}

.category-card {
  position: relative;
  height: 120px;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 10px;
}

.category-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-name {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: white;
  padding: 8px;
  text-align: center;
  font-weight: bold;
}

.offer-card {
  padding: 15px;
}

.offer-content {
  gap: 10px;
}

.offer-icon {
  width: 40px;
  height: 40px;
}

.offer-title {
  font-weight: bold;
  color: #333;
  display: block;
}

.offer-subtitle {
  font-size: 12px;
  color: #999;
}